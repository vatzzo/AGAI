<%= form_with model: [:activity, @step], class:'form' do |form| %>
    <h1 class='form__header'>Step</h1>
    <div class='form__item'>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div class='form__item'>
        <%= form.label :content %>
        <%= form.rich_text_area :content %>
    </div>
    <% if type == :edit %>
        <div class='form__item'>
            <%= form.label :is_done %>
            <%= form.check_box :is_done %>
        </div>
    <% end %>

     <%= link_to activities_path, class:'back back--topone' do %>
        <i class="fas fa-times-circle"></i>
     <% end %>

  <%= form.submit class:'submit'%>
<% end %>