<h1> Activities </h1>
<div class='gallery'>
    <% @activities.each do |activity| %>
    <div class='card gallery__item'>
        <%= image_tag activity.image, class:'card__image' %>
        <p class='card__title'><%= activity.title %></p>
        <p class='card__user'><%= image_tag user_avatar(current_user, 100), class: 'avatar avatar--small' %><span><%= activity.user %></span></p>
        <div class='card__actions'>
            <%= link_to activity, method: :delete, data: { confirm: 'Are you sure?' }, class:'button button__action button__action--remove' do %>
                <i class="fas fa-trash"></i>
            <% end %>
            <%= link_to activity_path(activity), class:'button button__action button__action--edit' do %>
                <i class="fas fa-info-circle"></i>
            <% end %>

            <%= link_to edit_activity_path(activity), class:'button button__action button__action--show' do %>
                <i class="fas fa-edit"></i>
            <% end %>
        </div>
    </div>
    <% end %>
    <div class='card card__add gallery__item'>
        <%= link_to new_activity_path do %>
            <i class="fas fa-plus card__plus"></i>
        <% end %>
    </div>
</div>