<%= form_with model: @activity, class:"form #{ 'form--big' if type == :edit }" do |form| %>
    <h1 class='form__header'>Activity</h1>

    <% if type == :edit %>
      <div class='form__item'>
          <%= form.label :is_public %>
          <%= form.check_box :is_public, class:'checkbox' %>
      </div>
    <% end %>

    <div class='form__item'>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div class='form__item'>
        <%= form.label :description %>
        <%= form.rich_text_area :description %>
    </div>
    <div class='form__item'>
        <%= form.label :deadline %>
        <%= form.date_field :deadline %>
    </div>

    <div class='form__item'>
        <% if @activity.image.attached? %>
            <%= image_tag @activity.image, width: '400px' %>
        <% end %>
        <label>Image</label>
        <%= form.file_field :image %>
    </div>

    <% if type == :edit %>
        <h1 class='form__header'>Steps</h1>
        <div class='form__items'>
          <%= render "steps" %>
        </div>
    <% end %>

     <%= link_to activities_path, class:'back' do %>
        <i class="fas fa-times-circle""></i>
     <% end %>

  <%= form.submit class:'submit' %>
<% end %>
